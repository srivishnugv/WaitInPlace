                    </Grid>
                    <Button Text="Join the line" Clicked="Join_Line_1" HorizontalOptions="Fill" VerticalOptions="Center" BorderColor="Black" BorderWidth="1" BackgroundColor="Green" FontSize="Small" TextColor="White" Margin="95,0"/>
                </StackLayout>

